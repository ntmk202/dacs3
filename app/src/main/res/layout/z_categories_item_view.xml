<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bgr_pager"
    android:id="@+id/lyHomeCategoriesView">

    <RelativeLayout
        android:id="@+id/set_bgr_categories"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgV_categories"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/woman" />

        <TextView
            android:id="@+id/txtV_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgV_categories"
            android:layout_marginTop="5dp"
            android:gravity="bottom|center_horizontal"
            android:letterSpacing="0.01"
            android:padding="5dp"
            android:text="@string/fresh"
            android:textSize="10dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>